<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= "nav-transparent" if params[:controller] == "pages" && params[:action] == "home" %>">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "purpleplayy.png" %>
    <% end %>

    <% if params[:controller] == "activities" && params[:action] == "index" %>
      <%= form_tag activities_path, method: :get, class: "searchbar" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Tapez votre recherche ici"
        %>
        <%= submit_tag "Rechercher", class: "dark-button" %>
      <% end %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", "/", class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%#= link_to "Action", "#", class: "dropdown-item" %>
            <%# if %>
              <%= link_to "Mes activités", my_activities_path, class: "dropdown-item" %>
            <%# end %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Inscription", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
