
  <%= form_tag activities_path, method: :get, class: "searchbar" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Tapez votre recherche ici"
    %>
    <%= submit_tag "Rechercher", class: "dark-button" %>
  <% end %>


<div class="container-fluid lr">
  <% if @activities.size == 0 %>
    <h2> Désolé, nous n'avons aucune activité de ce type à vous proposer.<br> Mais nous en avons plein d'autres hyper cools 😁 </h2>
  <% elsif @activities.size == 1 %>
    <h2> 1 chance de trouver votre bonheur </h2>
  <% else %>
    <h2> <%=@activities.size %> chances de trouver votre bonheur </h2>
  <% end %>
  <div class="row">
    <div class="col-8 lr-cards">
      <% @activities.each do |activity| %>
      <div class="lr-card">
        <img src= <%= activity.main_photo %> >
          <div class="lr-card-info" id="list-activities">
            <div class="price">
              <h2> <%= activity.unit_price/100 %>€</h2>
              <p >/pers.</p>
            </div>
            <div class="title-city">
              <h3> <%= activity.title %> </h3>
              <p class="light-details"> <%= Geocoder.search(activity.address).first.city %> </p>
            </div>
            <div class="list-details">
              <ul>
                <li> <%= activity.duration %> min</li>
                <li> <%= activity.min_number_of_participants %> - <%= activity.max_number_of_participants %> participants</li>
                <li> <%= activity.min_age %> ans min</li>
              </ul>
            </div>
              <%= link_to "Découvrir", activity_path(activity) %>
        </div>
      </div>
      <%end%>
    </div>


    <div class="col-4">
      <div
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="pk.eyJ1IjoiY2FtaWxsZWR0eSIsImEiOiJjanpsMTVrZWcwaXQ3M2RuMG1rM242Y3FtIn0.wDpYPwI1WAXhfDMZggbOXw"
  ></div>
    </div>
  </div>
</div>



